<launch>

  <arg name="connected_to" default="panda_1/panda_1_tc_robot" />
  
  <arg name="schunk_pzh_gripper" default="$(find reconcycle_description)/urdf/schunk_pzh20.xacro" />
  
  <node name="schunk_pzh_gripper_tf" pkg="tf" type="static_transform_publisher" args="0 0 -0.10 0 0 3.14159 $(arg connected_to) schunk_pzh20_base 100"/>

  <group ns="schunk">
    <param name="robot_description" command="$(find xacro)/xacro $(arg schunk_pzh_gripper)" />
      <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  </group>

</launch>
